{
  "name": "Todo List - 任务清单",
  "description": "一个简洁的本地化任务清单管理工具。A concise localization task list management tool.",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/todo_16.png",
    "32": "icons/todo_32.png",
    "48": "icons/todo_48.png",
    "128": "icons/todo_128.png"
  },
  "action": {
    "default_title": "Todo List - 任务清单",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "unlimitedStorage"]
}
